<div class="cart-container">
    <div class="cart">
        <h2>Get it shipped ({{this.qty}})</h2>
        <ul>
            {{#each products}}
                <li>
                    <div class="product-cart" data-id="{{this.product._id}}">
                        <img src="/imgs/products/clothe2.webp">
                        <div>
                            <h2>{{this.product.title}}</h2>
                            <p>{{this.product.description}}</p>
                            <b>{{this.product.price}} $</b> 
                            <input type="number" value="{{this.qty}}">   
                        </div>
                        <div class="product-cart-btns">
                            <button><i class="fa-solid fa-trash"></i></button>
                        </div>
                    </div>
                </li>
            {{/each}}
        </ul>
    </div>
    <div class="checkout">
        <h4>Subtotal: <b>{{this.total}} $</b></h4>
        <h4>Estimated Tax <b>5%</b></h4>
        <h4>Shipping <b>FREE</b></h4>
        <hr>
        <button>CheckOut</button>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/index.js"></script>