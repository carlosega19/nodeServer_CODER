<div class="filters-container">
    <h3>Shop by categories</h3>
    <h1>Summer Collection</h1>
    <div class="filters">
        <button id="priceOrder=asc">+ Economic</button>
        <button id="topSeller=true">Top Selling</button>
        <button id="priceOrder=desc">+ Expensive</button>
    </div>
</div>

<div class="products-container">
    {{#each docs}}
    <div class="product {{#if status}}{{else}}notavailable{{/if}} {{#if (eq this.stock 0)}}outstock{{/if}}" data-id="{{this._id}}">
        <img src="/imgs/products/clothe2.webp" alt="{{this.name}}">
        <h3>{{this.title}}</h3>
        <p>${{this.price}}</p>
        {{#if (eq this.stock 0)}}
        <b class="red">Out of stock</b>
        {{else}}
        <b class="green">In stock</b>
        {{/if}}
        <button class="add-to-cart">Add to cart</button>
    </div>
    {{/each}}
</div>

<div class="products-pagination">
    <a href="/products/?page={{prevPage}}" class="pageChanger {{#if hasPrevPage}}{{else}}unable{{/if}}">Previous</a>
    <p>{{page}} - {{totalPages}}</p>
    <a href="/products/?page={{nextPage}}" class="pageChanger {{#if hasNextPage}}{{else}}unable{{/if}}">Next</a>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/index.js"></script>